<div class="new_comment">
<h1>New Comment</h1>

<% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<%=form_for @comment do |p| %>
	<br>
	<!--<b><%= p.label :users %><b>
	<%= p.collection_select :user_id, User.all, :id, :username, prompt: true %>
	<br>
	-->
    <%= hidden_field(:comment, :parent_id, :value => @parent_id) %>
    <%= hidden_field(:comment, :post_id, :value => @post) %>
    <%= hidden_field(:comment, :user_id, :value => current_user.id) %>
	<br>
	<b><%= p.label :content %></b>
	<%= p.text_field :content%>
	<br>
	<%= p.submit %>
<% end %>
</div>

